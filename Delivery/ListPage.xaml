<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Delivery.ListPage"
             Title="ListPage"
             xmlns:local="clr-namespace:Delivery">

    <StackLayout Margin="20">
        <Editor Placeholder="Enter the description of the delivery list"
 Text="{Binding Description}"
 HeightRequest="50" >

        <Editor.Behaviors>
            <local:ValidationB />
        </Editor.Behaviors>
        </Editor>

        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>
            <Button Text="Save"
 Clicked="OnSaveButtonClicked" />
            <Button Grid.Column="1"
 Text="Delete"
 Clicked="OnDeleteButtonClicked"/>
        </Grid>
        <Button Text="Add/Choose Item to delivery" MaximumWidthRequest="300"
Clicked="OnChooseButtonClicked"/>

        <ListView x:Name="listView"
 Margin="20">
            <ListView.ItemTemplate>
                <DataTemplate>
                    <TextCell Detail="{Binding Description}" />
                </DataTemplate>
            </ListView.ItemTemplate>
        </ListView>

    </StackLayout>

</ContentPage>